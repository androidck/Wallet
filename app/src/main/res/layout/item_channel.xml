<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ly_item_channel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_200"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_10" />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_24"
            android:layout_marginRight="@dimen/space_24"
            >
            <TextView
                android:id="@+id/tv_channel_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="佳付通快捷通道（推荐）"
                android:textColor="@color/textColor"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_28px"
                />
            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="费率：0.42% 有积分"
                android:textColor="#ffa752"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_28px"
                android:layout_marginLeft="@dimen/space_20"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/space_24"
            android:layout_marginRight="@dimen/space_24"
            >
            <TextView
                android:id="@+id/tv_mer_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="商户类型：真实商户 单笔手续费：1.00元"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_26px"
                />
            <ImageView
                android:id="@+id/img_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/channel_active"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:id="@+id/tv_support_bank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="支持银行：平安银行,招商银行，中国邮储银行，民生银行"
            android:textSize="@dimen/font_size_26px"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_24"
            android:layout_marginRight="@dimen/space_24"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_10" />
    </com.zhy.autolayout.AutoLinearLayout>
    <include layout="@layout/division_line"/>
</com.zhy.autolayout.AutoLinearLayout>