<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_200"
            android:background="@android:color/white"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_weichat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/share_weichat"
                android:text="微信"
                android:textSize="@dimen/font_size_30px"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:drawablePadding="-10dp"
                android:layout_marginTop="@dimen/space_30"
                />
            <TextView
                android:id="@+id/tv_penyou"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/share_penyouquan"
                android:text="朋友圈"
                android:textSize="@dimen/font_size_30px"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:drawablePadding="-10dp"
                android:layout_marginTop="@dimen/space_30"
                />
            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/share_qq"
                android:text="QQ"
                android:textSize="@dimen/font_size_30px"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:drawablePadding="-10dp"
                android:layout_marginTop="@dimen/space_30"
                />
            <TextView
                android:id="@+id/tv_zone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/share_zone"
                android:text="QQ空间"
                android:textSize="@dimen/font_size_30px"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:drawablePadding="-10dp"
                android:layout_marginTop="@dimen/space_30"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <include layout="@layout/division_line"/>
        <TextView
            android:id="@+id/tv_esc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_100"
            android:background="@android:color/white"
            android:text="取消"
            android:textSize="@dimen/font_size_30px"
            android:textColor="@color/textColor"
            android:gravity="center"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>