<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="@dimen/space_500"
        android:layout_height="@dimen/space_230"
        android:layout_centerInParent="true"
        android:background="@drawable/item_share_bg"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="昵称"
                    android:textSize="@dimen/font_size_30px"
                    android:textColor="@color/textColor"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/space_20"
                    android:layout_marginLeft="@dimen/space_30"
                    />
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_56"
                        android:layout_marginRight="@dimen/space_30"
                        android:background="@drawable/editor_line"
                        android:layout_marginLeft="@dimen/space_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/space_10"
                        >
                        <com.hjq.widget.ClearEditText
                            android:id="@+id/ed_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="请输入昵称"
                            android:textSize="@dimen/font_size_28px"
                            android:padding="@dimen/space_10"
                            android:background="@null"
                            />
                    </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
            <include layout="@layout/division_line"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/btn_esc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="取消"
                    android:textColor="@color/textColor"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="@dimen/space_1"
                    android:layout_height="match_parent"
                    android:background="@color/colorLines"
                    />
                <TextView
                    android:id="@+id/btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="确定"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>