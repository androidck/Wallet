<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="@dimen/space_500"
        android:layout_height="@dimen/space_250"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/item_share_bg">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_150"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提示"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:textSize="@dimen/font_size_32px"
                android:layout_marginTop="@dimen/space_24"
                />
            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请登录，体验完整功能"
                android:textColor="@color/textColor"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/font_size_30px"
                android:layout_marginTop="@dimen/space_16"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <include layout="@layout/division_line"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_100"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_esc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:textSize="@dimen/font_size_30px"
                />
            <View
                android:layout_width="@dimen/space_1"
                android:layout_height="match_parent"
                android:background="@color/colorLines"
                />
            <TextView
                android:id="@+id/tv_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="去登录"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_size_30px"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>