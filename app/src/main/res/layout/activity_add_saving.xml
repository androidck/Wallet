<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/view_title"/>
    <include layout="@layout/division_line"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        >
        <!-- 银行卡正面 -->
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_bank_card"
                android:layout_width="150dp"
                android:layout_height="105dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_30"
                android:src="@mipmap/bank_card" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <!-- 姓名 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_80"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="银行名称："
                android:textColor="@color/textColor"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_30"
                />
            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="match_parent"
                android:hint="不可编辑"
                android:textSize="@dimen/space_24"
                android:layout_marginRight="@dimen/space_30"
                android:background="@null"
                android:gravity="center_vertical"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:background="@color/colorLine"
            />
        <!-- 银行卡号 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_80"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="银行卡号："
                android:textColor="@color/textColor"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_30"
                />
            <com.hjq.widget.ClearEditText
                android:id="@+id/bank_number"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="match_parent"
                android:hint="可编辑"
                android:textSize="@dimen/space_24"
                android:layout_marginRight="@dimen/space_30"
                android:background="@null"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:background="@color/colorLine"
            />
        <!-- 姓名 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_80"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="选择开户行："
                android:textColor="@color/textColor"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_30"
                />
            <TextView
                android:id="@+id/tv_open_member"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="match_parent"
                android:hint="请选择开户行"
                android:textSize="@dimen/space_24"
                android:layout_marginRight="@dimen/space_30"
                android:background="@null"
                android:gravity="center_vertical"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:background="@color/colorLine"
            />
        <!-- 姓名 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_80"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="开户地区："
                android:textColor="@color/textColor"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_30"
                />
            <TextView
                android:id="@+id/tv_open_address"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="match_parent"
                android:hint="请选择开户地区"
                android:gravity="center_vertical"
                android:textSize="@dimen/space_24"
                android:layout_marginRight="@dimen/space_30"
                android:background="@null"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:background="@color/colorLine"
            />
        <!-- 姓名 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_80"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="预留手机号："
                android:textColor="@color/textColor"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_30"
                />
            <com.hjq.widget.ClearEditText
                android:id="@+id/ed_phone"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="match_parent"
                android:hint="请输入预留手机号"
                android:textSize="@dimen/space_24"
                android:layout_marginRight="@dimen/space_30"
                android:background="@null"
                android:maxLength="13"
                android:inputType="number"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:background="@color/colorLine"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <Button
        android:id="@+id/btn_commit"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/space_60"
        android:layout_marginTop="@dimen/space_60"
        android:layout_marginRight="@dimen/space_60"
        android:layout_marginBottom="@dimen/space_60"
        android:text="添加储蓄卡" />
</com.zhy.autolayout.AutoLinearLayout>